{
	"extends": ["@commitlint/config-angular"],
	"rules": {
		"scope-case": [2, "always", "sentence-case"],
		"type-enum": [
			2,
			"always",
			[
				"chore",
				"ci",
				"feat",
				"fix",
				"perf",
				"refactor",
				"revert",
				"style",
				"test",
				"types",
				"workflow",
				"wip"
			]
		]
	}
}
